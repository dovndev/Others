{
    "manifest_version": 3,
    "name": "Element hider",
    "description": "Hide unwanted Elments in sites, press 'ctrl + z' to undo hiding",
    "version": "0.2",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["inject.js"],
            "css": ["inject.css"]
        }
    ],
    "icons": {
        "16": "icon-16x16.png",
        "48": "icon-48x48.png",
        "128": "icon-128x128.png"
    },
    "background": { 
        "service_worker": "background.js",
        "persistant": false
    },
    "permissions": [
        "contextMenus"
    ]
}
